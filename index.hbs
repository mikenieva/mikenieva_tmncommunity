{{!< default}}

{{#contentFor "meta"}}
    <meta property="og:url" content="{{@blog.url}}" />
    <meta property="og:title" content="Mike Nieva - Profesional en Educación Tecnológica" />
    <meta property="og:site_name" content="{{@blog.title}}" />
    <meta property="og:image" content="https://i.imgur.com/JdL6F6h.jpg" />
    <meta property="og:description" content="Impulso vidas profesionales a través de Internet."/>
    <meta property="fb:profile_id" content="mikenieva" />
    <meta property="fb:admins" content="mikenieva" />
    <meta property="fb:pages" content="285521064948889" />
{{/contentFor}}

                            <!-- Banner -->
                                <section id="banner">
                                    <div class="content">
                                        <header>
                                            <h1>Mike Nieva<br /></h1>
                                            <p>Activo marcas personales en Internet</p>
                                        </header>
                                        <br>
                                        <div id="revue-embed">
                                            <form action="https://www.getrevue.co/profile/mikenieva/add_subscriber" method="post" id="revue-form" name="revue-form"  target="_blank">
                                                <div class="revue-form-group">
                                                    <label for="member_email">Recibe ideas semanales. Contacta conmigo.</label>
                                                    <input class="revue-form-field" placeholder="Tu correo electrónico..." type="email" name="member[email]" id="member_email">
                                                    <br>
                                                </div>
                                                <div class="revue-form-actions">
                                                    <input type="submit" value="Suscribirme" name="member[subscribe]" id="member_submit">
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <span class="image object">
                                        <img src="https://i.imgur.com/JdL6F6h.jpg" alt="" />
                                    </span>
                                </section>


                            <!-- Section -->
                                <section>


<div class="posts">
{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<article class="{{post_class}}">
    <a href="{{url}}" class="image"><img src="{{img_url feature_image}}" alt="" /></a>
        <h3 class="post-title"><a href="{{url}}">{{title}}</a></h3>
 <span class="label" style="
    display: inline;
    padding: .2em .6em .3em;
    font-size: 75%;
    font-weight: 700;
    line-height: 1;
    color: white;
    text-align: center;
    white-space: nowrap;
    vertical-align: baseline;
    border-radius: 0;
    background-color: #3e444a;">
    {{date published_at format="MMM DD, YYYY"}}
  </span>
<br>
<br>
        <p>{{excerpt words="26"}}</p>
        <ul class="actions">
            <li><a href="{{url}}" class="button">Sigue leyendo</a></li>
        </ul>
</article>
{{/foreach}}

</div>

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}
